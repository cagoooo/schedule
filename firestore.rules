rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /bookings/{booking} {
      // 所有人可讀取預約資料
      allow read: if true;
      
      // 新增預約：驗證必填欄位
      allow create: if request.resource.data.booker != null
                    && request.resource.data.booker is string
                    && request.resource.data.booker.size() > 0
                    && request.resource.data.date != null
                    && request.resource.data.periods != null
                    && request.resource.data.periods.size() > 0
                    && request.resource.data.reason != null;
      
      // 更新與刪除：需要已登入的管理員
      allow update, delete: if request.auth != null;
    }
  }
}
